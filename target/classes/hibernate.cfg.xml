<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>

 <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres123</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/employee_table</property>
        <property name="show_sql">true</property>
        <property name="hibernate.default_schema" value="public"/>

        <mapping class="org.EmployeWorld.model.Employe"></mapping>


   </session-factory>


</hibernate-configuration >

