<html t:type="layout" title="org.EmployeWorld"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">

<div class="row">
    <div class="span4 offset3">
        <t:form t:id="loginForm" >
<t:errors/>
            <h2>sign in</h2>
            <t:label for="userName" >UserName</t:label>
            <t:textfield t:id="userName" validate="required" placeholder="username"/>
            <t:label for="Password" ></t:label>
            <t:passwordfield t:id="password" value="password" validate="required" placeholder="password"/>
            <t:submit class="btn btn-large btn-primary" value="Sign in"/>
            <!--<t:textarea t:id="userName" aria-rowspan="5" colspan="20"/>-->
        </t:form>
    </div>
</div>

 </html>